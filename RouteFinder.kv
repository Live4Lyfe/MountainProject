<StylesPage>:
    name: 'styles'
    canvas.before:
        Rectangle:
            id: styles_background
            pos: self.pos
            size: self.size
            source: root.get_background()
    BoxLayout:
        id: screen_layout
        orientation: 'vertical'
        Label:
            id: title
            text: 'Route Guide'
            font_size: root.size[0] / 20
