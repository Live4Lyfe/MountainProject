<SearchPage>:
    orientation: 'vertical'
    Label:
        id: guide
        text: 'Route Guide'
        font_size: root.size[0] / 20
        size_hint_y: None
        size: self.texture_size    
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                id: styles
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        orientation:'vertical'
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: sport
                                text: 'Sport'
                                on_press: root.set_style('sport')
                            RangeSlider:
                                id: sport_slide
                                text: 'Sport Difficulty'
                                disable: True
                                opacity: 0
                                range: (0, 76)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: trad
                                text: 'Trad'
                                on_press: root.set_style('trad')
                            RangeSlider:
                                id: trad_slide
                                text: 'Trad Difficulty'
                                disable: True
                                opacity: 0
                                range: (0, 76)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: tr
                                text: 'Top Rope'
                                on_press: root.set_style('tr')
                            RangeSlider:
                                id: tr_slide
                                text: 'Top Rope Difficulty'
                                disable: True
                                opacity: 0
                                range: (0, 76)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: boulder
                                text: 'Boulder'
                                on_press: root.set_style('boulder')
                            RangeSlider:
                                id: boulder_slide
                                disable: True
                                opacity: 0
                                range: (0, 70)
                                step: 1   
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: ice
                                text: 'Ice'
                                on_press: root.set_style('ice')
                            RangeSlider:
                                id: ice_slide
                                disable: True
                                opacity: 0
                                range: (0, 7)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: mixed
                                text: 'Mixed'
                                on_press: root.set_style('mixed')
                            RangeSlider:
                                id: mixed_slide
                                disable: True
                                opacity: 0
                                range: (0, 11)
                                step: 1 
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: aid
                                text: 'Aid'
                                on_press: root.set_style('aid')
                            RangeSlider:
                                id: aid_slide
                                disable: True
                                opacity: 0
                                range: (0, 9)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: alpine
                                text: 'Alpine'
                                on_press: root.set_style('alpine')
                            RangeSlider:
                                id: alpine_slide
                                disable: True
                                opacity: 0
                                range: (0, 5)
                                step: 1
                        BoxLayout:
                            orientation: 'horizontal'
                            ToggleButton:
                                id: snow
                                text: 'Snow'
                                on_press: root.set_style('snow')
                            RangeSlider:
                                id: snow_slide
                                disable: True
                                opacity: 0
                                range: (0, 2)
                                step: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: root.width / 3
            Label:
                id: preferences
                text: 'Preferences'


