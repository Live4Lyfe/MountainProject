<SearchPage>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0,1,0,0.5
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: guide
        text: 'Route Guide'
        font_size: root.size[0] / 20
        size_hint_y: None
        size: self.texture_size

        canvas.before:
            Color:
                rgba: 0,0,1,0.5
            Rectangle:
                pos: self.pos
                size: self.size
    
